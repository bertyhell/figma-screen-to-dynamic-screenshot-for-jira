{
  "name": "Copy figma thumbnail as markdown",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Copies the thumbnail of the current figma screen as markdown",
  "homepage_url": "https://github.com/bertyhell/figma-screen-to-dynamic-screenshot-for-jira",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Copy figma screenshot as markdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.figma.com/file/*",
        "https://figma.com/file/*"
      ],
      "js": [
        "src/content/content.js"
      ]
    }
  ],
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://www.figma.com/file/*",
    "https://figma.com/file/*"
  ]
}
